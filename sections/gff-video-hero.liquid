<!-- /sections/gff-hero-video.liquid -->
{{ 'gff-styling.css' | asset_url | stylesheet_tag }}
{{ 'gff-javascript.js' | asset_url | script_tag }}

{%- liquid
    assign sectionId = section.id
-%}

{%- style -%}
    [data-gff-section="{{ sectionId }}"] {
    --gff-content-height: {{ section.settings.height }}vh;
    --gff-mask-opacity: {{ section.settings.maskOpacity }};
    --gff-content-padding: {{ section.settings.contentPadding }}rem;
    --gff-content-gap: {{ section.settings.contentGap }}rem;
    --gff-content-alignX: {{ section.settings.contentAlignX | default: "start" }};
    --gff-content-alignY: {{ section.settings.contentAlignY | default: "start" }};
    --gff-section-padding: {{ section.settings.sectionPadding | default: 2 }}rem;
    }
{%- endstyle -%}

<section
        data-gff-section="{{ sectionId }}"
        class="gff-section gff-hero gff-hero-video color-{{ section.settings.color_scheme }} gradient"
>
    <div class="gff-hero-video-wrapper gff-image">
        {% unless section.settings.video == null %}
            {{
            section.settings.video
            | video_tag:
            image_size: '1100x',
            autoplay: true,
            loop: true,
            controls: false,
            muted: true,
            preload: 'none'
            }}
        {% endunless %}
        <div class="gff-hero-video-content gff-blocks-column">
            {% for block in section.blocks %}
                {% case block.type %}
                    {% when '@app' %}
                        <div data-gff-block="{{ block.id }}"
                             class="gff-app-block {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                            {% render block %}
                        </div>
                    {% when 'gff-heading' %}
                        <div data-gff-block="{{ block.id }}"
                             class="gff-app-block {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                                {{ block.shopify_attributes }}
                        >
                            {% render 'gff-heading', block: block %}
                        </div>
                    {% when 'gff-text' %}
                        <div data-gff-block="{{ block.id }}"
                             class="gff-app-block {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                                {{ block.shopify_attributes }}
                        >
                            {% render 'gff-text', block: block %}
                        </div>
                    {% when 'gff-button' %}
                        <div data-gff-block="{{ block.id }}"
                             class="gff-app-block {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                                {{ block.shopify_attributes }}
                        >
                            {% render 'gff-button', block: block %}
                        </div>
                {% endcase %}
            {% endfor %}
        </div>
    </div>
</section>

{% schema %}
{
  "name": "GFF | Hero Video",
  "class": "gff-hero-video",
  "tag": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "video",
      "id": "video",
      "label": "t:sections.video.settings.video.label"
    },
    {
      "type": "range",
      "id": "height",
      "min": 30,
      "max": 100,
      "step": 5,
      "label": "Height",
      "default": 50
    },
    {
      "type": "range",
      "id": "maskOpacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Mask Opacity",
      "default": 0.3
    },
    {
      "type": "range",
      "id": "contentGap",
      "min": 0,
      "max": 3,
      "step": 0.5,
      "label": "Content Gap",
      "default": 1
    },
    {
      "type": "range",
      "id": "contentPadding",
      "min": 0,
      "max": 10,
      "step": 0.5,
      "label": "Content Padding",
      "default": 2
    },
    {
      "type": "select",
      "id": "contentAlignX",
      "label": "Content Align Left/Right",
      "default": "start",
      "options": [
        {
          "value": "start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "end",
          "label": "Right"
        }
      ]
    },
    {
      "type": "select",
      "id": "contentAlignY",
      "label": "Content Align Top/Bottom",
      "default": "end",
      "options": [
        {
          "value": "start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "end",
          "label": "Bottom"
        }
      ]
    },
    {
      "type": "range",
      "id": "sectionPadding",
      "min": 0,
      "max": 3,
      "step": 0.5,
      "label": "Section Margin",
      "default": 1.5
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "max_blocks": 10,
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "gff-button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Click Me"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "checkbox",
          "id": "outline",
          "label": "Outline",
          "default": false
        }
      ]
    },
    {
      "type": "gff-text",
      "name": "Text",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Content",
          "default": "Text Content"
        },
        {
          "type": "select",
          "id": "displayAs",
          "options": [
            {
              "value": "paragraph",
              "label": "Paragraph"
            },
            {
              "value": "subtitle",
              "label": "Subtitle"
            }
          ],
          "default": "paragraph",
          "label": "Display As"
        }
      ]
    },
    {
      "type": "gff-heading",
      "name": "Heading",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Content",
          "default": "Heading Content"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "t:sections.all.heading_size.options__1.label"
            },
            {
              "value": "h1",
              "label": "t:sections.all.heading_size.options__2.label"
            },
            {
              "value": "h0",
              "label": "t:sections.all.heading_size.options__3.label"
            },
            {
              "value": "hxl",
              "label": "t:sections.all.heading_size.options__4.label"
            },
            {
              "value": "hxxl",
              "label": "t:sections.all.heading_size.options__5.label"
            }
          ],
          "default": "h1",
          "label": "t:sections.all.heading_size.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "GFF | Hero Video",
      "category": "Text",
      "settings": {
        "height": 50,
        "maskOpacity": 0.3,
        "contentGap": 1,
        "contentPadding": 2
      },
      "blocks": []
    }
  ]
}
{% endschema %}
